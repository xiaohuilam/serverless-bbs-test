{
  "name": "serverless-bbs",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "packageManager": "yarn@4.3.1",
  "scripts": {
    "dev": "yarn concurrently \"yarn:dev:ui\" \"yarn:dev:worker\"",
    "dev:ui": "yarn vite ui",
    "dev:worker": "wrangler dev",
    "start": "wrangler dev",
    "build": "yarn vite build ui",
    "deploy": "yarn wrangler deploy",
    "preview": "yarn vite preview ui",
    "lint": "yarn eslint ui --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "db:migrate": "wrangler d1 migrations apply DB --local",
    "db:migrations:apply": "wrangler d1 migrations apply DB --remote"
  },
  "dependencies": {
    "@cloudflare/vite-plugin": "^1.7.4",
    "@hono/zod-validator": "^0.2.1",
    "@radix-ui/number": "^1.1.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-focus-scope": "^1.1.7",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-use-previous": "^1.1.1",
    "@simplewebauthn/browser": "^13.1.0",
    "@simplewebauthn/server": "^10.0.0",
    "@tiptap/core": "^2.22.3",
    "@tiptap/extension-color": "^2.22.3",
    "@tiptap/extension-image": "^2.22.3",
    "@tiptap/extension-link": "^2.22.3",
    "@tiptap/extension-text-align": "^2.22.3",
    "@tiptap/extension-text-style": "^2.22.3",
    "@tiptap/extension-underline": "^2.22.3",
    "@tiptap/pm": "^2.22.3",
    "@tiptap/react": "^2.22.3",
    "@tiptap/starter-kit": "^2.22.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "hono": "^4.4.6",
    "lucide-react": "^0.469.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250620.0",
    "@types/node": "^20.14.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^6.3.5",
    "wrangler": "^4.20.5"
  }
}
